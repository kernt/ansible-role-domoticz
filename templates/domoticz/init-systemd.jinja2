# Domoticz - Home Automation System
#
# Service Unit file for systemd system manager

[Unit]
    Description=domoticz_service

[Service]
    User={{ domoticz_user }}
    Group={{ domoticz_group }}
    ExecStart={{ domoticz_download_dir }}/domoticz/domoticz -www {{ domoticz_port }} -sslwww {{ domoticz_sslport }}
    WorkingDirectory={{ domoticz_download_dir }}/domoticz
    {% if ansible_distribution == 'Ubuntu' and ansible_distribution_version|int >= 16.04 %}
    CapabilityBoundingSet=CAP_NET_BIND_SERVICE
    {% endif %}
    {% if ansible_distribution == 'Ubuntu' and ansible_distribution_version|int < 16.04 %}
    ExecStartPre=setcap 'cap_net_bind_service=+ep' {{ domoticz_download_dir }}/domoticz/domoticz
    {% endif %}
    Restart=on-failure
    RestartSec=1m
[Install]
    WantedBy=multi-user.target